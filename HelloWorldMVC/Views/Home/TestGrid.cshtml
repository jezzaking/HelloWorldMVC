@{
    ViewBag.Title = "People List";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>

<br />
@(Html.Kendo().Grid<Person>()
        .Name("grid")
        .Columns(columns =>
        {
            columns.Bound(c => c.FirstName).Width(140);
            columns.Bound(c => c.MiddleName).Width(190);
            columns.Bound(c => c.LastName);
            columns.Bound(c => c.Title);
            columns.Bound(c => c.EmailPromotion);
            columns.Bound(c => c.AdditionalContactInfo);
        })
        .HtmlAttributes(new { style = "height: 380px;" })
        .Scrollable()
        .Groupable()
        .Sortable()
        .Pageable(pageable => pageable
            .Refresh(true)
            .PageSizes(true)
            .ButtonCount(5))
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("Customers_Read", "Home"))
        )
)

